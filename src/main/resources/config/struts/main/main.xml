<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    
    
    <package name="main" namespace="/" extends="issue-tracker-default">

         <default-action-ref name="index"/>
        
        <action name="index" class="controller.struts.action.main.IndexAction">
            <result name="success-html-full-page" type="tiles">main.fullPage.index</result>
            <result name="success-html-main-content" type="tiles">main.fullPage.index</result>
            <result name="error-html-full-page" type="tiles">main.fullPage.defaultError</result>
            <result name="unexpected-error" type="tiles">main.fullPage.defaultError</result>
        </action>         
    </package>
</struts>
