<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="issue-tracker-default" extends="struts-default">
        <result-types> 
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types> 
        <interceptors>
            <interceptor name="threadContextSetter" class="controller.struts.customComponent.interceptor.ThreadContextSetterInterceptor"/>
            <interceptor name="conversionErrorsToFieldErrors" class="controller.struts.customComponent.interceptor.ConversionErrorsToFieldErrorsInterceptor"/>
            <interceptor-stack name="universityCorporateWebsiteStack">
                <interceptor-ref name="exception">
                    <param name="logEnabled">true</param>
                    <param name="logLevel">DEBUG</param>
                </interceptor-ref>
                <interceptor-ref name="threadContextSetter"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="i18n">
                    <param name="requestOnlyParameterName">locale</param>
                </interceptor-ref>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="datetime"/>
                <interceptor-ref name="multiselect"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload">
                    <param name="maximumSize">1500000</param><!--200MB - 209715200 bytes-->
                    <param name="allowedTypes">image/png,image/gif,image/jpeg</param>
                </interceptor-ref>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="actionMappingParams"/>
                <interceptor-ref name="conversionErrorsToFieldErrors"/>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>            
            </interceptor-stack> 
        </interceptors> 
        <default-interceptor-ref name="universityCorporateWebsiteStack"/>
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="unexpected-error"/>
        </global-exception-mappings>
        
    
