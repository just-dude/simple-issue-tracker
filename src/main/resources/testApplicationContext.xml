<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:config/spring/test/persistence.properties</value>
            </list>
        </property>
    </bean>

    <bean id="BeanFactoryProvider" class="common.beanFactory.BeanFactoryProvider"/>
    <import resource="/config/spring/test/persistence.xml"/>
    <import resource="/config/spring/common/common.xml"/>

    <bean id="Instant" class="java.time.Instant" factory-method="ofEpochSecond">
        <constructor-arg value="1451606400"/>
    </bean>
    <bean id="ZoneId" class="java.time.ZoneId" factory-method="of">
        <constructor-arg type="java.lang.String" value="UTC"/>
    </bean>
    <bean id="Clock" class="java.time.Clock" factory-method="fixed">
        <constructor-arg ref="Instant"/>
        <constructor-arg ref="ZoneId"/>
    </bean>
</beans>